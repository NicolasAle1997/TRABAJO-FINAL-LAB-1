///Funcion generica para mostrar una cabecera con un recuadro
void imprimirCabecera(char cabecera[])
{
    int i;
    printf("\t\t\t\t%c", 201);
    for(i=0; i<50; i++)
    {
        printf("%c",205);
    }
    printf("%c\n", 187);
    printf("\t\t\t\t%c%32s%19c\n", 186,cabecera,186);
    printf("\t\t\t\t%c", 200);
    for(i=0; i<50; i++)
    {
        printf("%c",205);
    }
    printf("%c", 188);
}

/**Las funciones de imprimirOpciones se pueden eliminar para hacer una sola generica, su prototipado seria el siguiente:
 *      void imprimirOpciones(char opciones[][30], int cantOpciones);
 */
